{
  "name": "move-everything-installer",
  "version": "0.2.0",
  "description": "Cross-platform installer for Move Everything",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "clean": "rm -rf dist/",
    "build": "npm run clean && npm run build:all",
    "build:all": "electron-builder --mac --win --linux",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:win:arm64": "electron-builder --win --arm64",
    "build:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.7",
    "ssh2": "^1.15.0",
    "sshpk": "^1.18.0"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "electron": "^40.3.0",
    "electron-builder": "^26.7.0"
  },
  "build": {
    "appId": "com.move-everything.installer",
    "productName": "Move Everything Installer",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "files": [
      "electron/**/*",
      "ui/**/*"
    ],
    "afterSign": "build/notarize.js",
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "identity": "Charles Vestal (J4722B5MJW)",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "Utility"
    }
  }
}
